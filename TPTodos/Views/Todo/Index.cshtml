@{
    ViewData["Title"] = "Liste des tâches";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="bi bi-check2-square"></i> Mes Tâches
                    </h2>
                    <span class="badge bg-light text-primary fs-5">@ViewBag.count tâche(s)</span>
                </div>
                <div class="card-body">
                    @if (ViewBag.Todos != null && ViewBag.Todos.Count > 0)
                    {
                        <ul class="list-group">
                            @for (int i = 0; i < ViewBag.Todos.Count; i++)
                            {
                                var todo = ViewBag.Todos[i];
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h5 class="mb-2">@todo.Libelle</h5>

                                            @if (!string.IsNullOrEmpty(todo.Description))
                                            {
                                                <p class="mb-2 text-muted">@todo.Description</p>
                                            }

                                            <div class="d-flex gap-2 align-items-center">
                                                @if (todo.Statut == TPTodos.Enums.State.TODO)
                                                {
                                                    <span class="badge bg-secondary">À faire</span>
                                                }
                                                else if (todo.Statut == TPTodos.Enums.State.DOING)
                                                {
                                                    <span class="badge bg-warning text-dark">En cours</span>
                                                }
                                                else if (todo.Statut == TPTodos.Enums.State.DONE)
                                                {
                                                    <span class="badge bg-success">Terminée</span>
                                                }

                                                <small class="text-muted">
                                                    <i class="bi bi-calendar"></i>
                                                    @todo.DateLimite.ToString("dd/MM/yyyy")
                                                </small>
                                            </div>
                                        </div>

                                        <div class="btn-group-vertical" role="group">
                                            <a asp-action="Edit" asp-route-index="@i" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-index="@i" class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');">
                                                <i class="bi bi-trash"></i> Supprimer
                                            </a>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            <i class="bi bi-info-circle fs-3"></i>
                            <p class="mb-0 mt-2">Aucune tâche pour le moment. Commencez par en ajouter une !</p>
                        </div>
                    }
                </div>
                <div class="card-footer text-center bg-light">
                    <a asp-action="Add" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Ajouter une tâche
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
            border-left-color: #0d6efd;
            transform: translateX(5px);
        }

    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.8em;
    }
</style>