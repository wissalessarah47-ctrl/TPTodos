@using TPTodos.Enums
@model TPTodos.ViewModels.TodoAddVM
@{
    ViewData["Title"] = "Modifier";
}

<h1>Modifier une tâche</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-index="@ViewBag.Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Libelle" class="control-label"></label>
                <input asp-for="Libelle" class="form-control" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateLimite" class="control-label"></label>
                <input asp-for="DateLimite" class="form-control" type="date" />
                <span asp-validation-for="DateLimite" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Statut" class="control-label d-block"></label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Statut" value="@State.TODO" id="radioTodo" />
                    <label class="form-check-label" for="radioTodo">À faire</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Statut" value="@State.DOING" id="radioDoing" />
                    <label class="form-check-label" for="radioDoing">En cours</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Statut" value="@State.DONE" id="radioDone" />
                    <label class="form-check-label" for="radioDone">Terminée</label>
                </div>
                <span asp-validation-for="Statut" class="text-danger d-block"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}